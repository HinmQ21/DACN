# =============================================================================
# Medical QA Multi-Agent System - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys and settings

# =============================================================================
# API Keys (Required)
# =============================================================================
GOOGLE_API_KEY=your_google_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# Model Configuration - Default
# =============================================================================
GEMINI_MODEL=gemini-2.0-flash-exp
TEMPERATURE=0.3

# =============================================================================
# Model Configuration - Per Agent (Optional Overrides)
# Leave empty to use default model
# =============================================================================
COORDINATOR_MODEL=
REASONING_MODEL=
VALIDATOR_MODEL=
ANSWER_GENERATOR_MODEL=
WEB_SEARCH_MODEL=
REFLEXION_MODEL=

# Temperature Per Agent (Optional, 0 = use default)
COORDINATOR_TEMPERATURE=0
REASONING_TEMPERATURE=0
VALIDATOR_TEMPERATURE=0
ANSWER_GENERATOR_TEMPERATURE=0
WEB_SEARCH_TEMPERATURE=0
REFLEXION_TEMPERATURE=0

# =============================================================================
# Benchmark Configuration
# =============================================================================
MAX_SAMPLES=100
BATCH_SIZE=5

# =============================================================================
# Medprompt Configuration
# =============================================================================

# Embedding Configuration
EMBEDDING_MODEL=pritamdeka/S-PubMedBert-MS-MARCO
EMBEDDING_CACHE_DIR=./cache/embeddings

# Few-shot Selection Configuration
ENABLE_FEW_SHOT=true
FEW_SHOT_K=3
FEW_SHOT_MIN_SIMILARITY=0.3
KNN_INDEX_PATH=./data/knowledge_base/medqa/train_index.pkl

# Chain-of-Thought Configuration
ENABLE_COT=true
COT_DETAILED=true

# Choice Shuffling Ensemble Configuration
ENABLE_ENSEMBLE=true
ENSEMBLE_VARIANTS=5
ENSEMBLE_CONFIDENCE_THRESHOLD=0.6

# Self-Consistency Configuration (for high-stakes questions)
ENABLE_SELF_CONSISTENCY=false
SELF_CONSISTENCY_SAMPLES=3

# =============================================================================
# Self-Correction (Reflexion) Configuration
# =============================================================================
# Enable/disable self-correction mechanism
ENABLE_REFLEXION=true

# Maximum number of correction iterations
REFLEXION_MAX_ITERATIONS=2

# Confidence threshold below which reflexion is triggered
# If answer confidence < threshold, reflexion will attempt to improve it
REFLEXION_CONFIDENCE_THRESHOLD=0.7
